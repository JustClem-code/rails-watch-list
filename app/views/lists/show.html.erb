<div class="card">
  <div class="card-body">
    <%= @list.name%>
    <%= link_to 'Add a bookmark', new_list_bookmark_path(@list), class: "btn btn-primary"%>
  </div>
</div>
<div class="container text-center">
  <div class="row justify-content-md-center">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="card col-xs-12 col-md-4 m-3" style="width: 18rem;">
        <img src="<%=bookmark.movie.poster_url%>" class="card-img-top" alt="<%=bookmark.movie.title%>">
        <div class="card-body">
          <h5 class="card-title">
            <%=bookmark.movie.title%>
          </h5>
          <p class="card-text">
            <%=bookmark.movie.overview%>
          </p>
          <hr>
          <p class="card-text">
            <%=bookmark.comment%>
          </p>
          <div>
            <%= link_to 'Delete', bookmark_path(bookmark), class: "btn btn-primary", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}%>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>
