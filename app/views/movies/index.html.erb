<div class="container text-center">
  <div class="row justify-content-md-center">
    <% @movies.each do |movie| %>
      <div class="card col-xs-12 col-md-4 m-3" style="width: 18rem;">
        <img src="<%=movie.poster_url%>" class="card-img-top" alt="<%=movie.title%>">
        <div class="card-body">
          <h5 class="card-title">
            <%=movie.title%>
          </h5>
          <p class="card-text">
            <%=movie.overview%>
          </p>
          <%= link_to "Add to list" , new_bookmark_path, class: "btn btn-primary"%>
        </div>
        <div>
          <% movie.bookmarks.each do |bookmark| %>
          <p><%= bookmark.comment%></p>
          <% end%>
        </div>
      </div>
    <%end%>
  </div>
</div>
